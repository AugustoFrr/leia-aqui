<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.leiaaqui">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:hardwareAccelerated="false"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">
        <activity android:name=".view.ConsultaLivros"/>
        <activity
            android:name=".view.SelectDados"
            android:screenOrientation="portrait" />
        <activity
            android:name=".cadastros.CadastroClientes"
            android:screenOrientation="portrait" />
        <activity
            android:name=".cadastros.CadastroLivros"
            android:screenOrientation="portrait" />
        <activity
            android:name=".cadastros.CadastroCatLivros"
            android:screenOrientation="portrait" />
        <activity
            android:name=".cadastros.CadastroCatClientes"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.Login"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.SplashScreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
    </application>
</manifest>